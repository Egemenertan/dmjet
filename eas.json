{
  "cli": {
    "version": ">= 5.9.0"
  },
  "build": {
    "base": {
      "android": {
        "env": {
          "GRADLE_OPTS": "-Dorg.gradle.jvmargs='-Xmx8192m -XX:MaxMetaspaceSize=3072m -XX:+HeapDumpOnOutOfMemoryError -XX:ReservedCodeCacheSize=512m' -Dkotlin.version=1.9.25 -Dorg.gradle.parallel=true -Dorg.gradle.caching=true"
        },
        "resourceClass": "large"
      }
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true
      },
      "android": {
        "gradleCommand": ":app:assembleDebug"
      }
    },
    "preview": {
      "extends": "base",
      "distribution": "internal",
      "cache": {
        "disabled": true
      },
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      }
    },
    "production": {
      "extends": "base",
      "distribution": "store",
      "cache": {
        "disabled": false
      },
      "env": {
        "NODE_ENV": "production"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      },
      "ios": {
        "buildConfiguration": "Release"
      }
    },
    "production-clean": {
      "extends": "base",
      "cache": {
        "disabled": true
      },
      "distribution": "store",
      "env": {
        "NODE_ENV": "production"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": "clean :app:assembleRelease"
      },
      "ios": {
        "buildConfiguration": "Release"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleTeamId": "592QQ45TLH"
      }
    }
  }
}

