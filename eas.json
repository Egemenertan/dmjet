{
  "cli": {
    "version": ">= 5.9.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true
      },
      "android": {
        "gradleCommand": ":app:assembleDebug"
      }
    },
    "preview": {
      "distribution": "internal",
      "cache": {
        "disabled": false
      },
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      }
    },
    "production": {
      "distribution": "store",
      "cache": {
        "disabled": false
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "env": {
          "KOTLIN_VERSION": "2.1.0"
        }
      },
      "ios": {
        "buildConfiguration": "Release"
      }
    },
    "production-clean": {
      "extends": "production",
      "cache": {
        "disabled": true
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": "clean :app:assembleRelease",
        "env": {
          "KOTLIN_VERSION": "2.1.0"
        }
      }
    }
  },
  "submit": {
    "production": {}
  }
}

